<section id="expenseTable">
<div class="container" ng-init="retrieveExpenses()">
<div class="row">

	<div class="col-md-12">
	<h2 align="center">Expenses</h2>
	<br><br>
	<div class="table-responsive">
		<table class="table table-striped table-condensed table-bordered">
			<thead align="center">
				<tr>
					<th>#</th>
					<th>Amount</th>
					<th>Date</th>
					<th>Description</th>
					<th>User Email</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody >
				<tr ng-repeat="expense in allExpenses" style="margin-top: 10px">
					<td>{{expense.id}}</td>
					<td>{{expense.amount}}</td>
					<td>{{expense.date}}</td>
					<td>{{expense.description}}</td>
					<td>{{expense.userEmail}}</td>
					<td align="center">
						<button class="btn btn-warning" id="updateExpenseBtn" ng-if="expense.isOwn" ng-click="update(expense)" role="button">Update</button>
					</td>
					<td align="center">
						<button class="btn btn-danger" id="deleteExpenseBtn" ng-if="expense.isOwn" ng-click="delete(expense.id)" role="button">Delete</button>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
	</div>
</div>
</div>
</section>