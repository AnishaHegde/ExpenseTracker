<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form role="form">

            <h2 align="center">Report for your Expenses</h2>
            <br/><br/>

            <div class="row form-group">
                <div class="col-md-5">
                    <label for="date">Start Date</label>
                    <p class="input-group">
                        <input type="text" class="form-control input-md" uib-datepicker-popup="{{format}}"
                               ng-model="start_date" is-open="popup1.opened"
                               datepicker-options="dateOptions"
                               ng-required="true" close-text="Close"/>
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-info btn-md" ng-click="open1()">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </button>
                        </span>
                    </p>
                </div>
                <div class="col-md-5">
                <label for="date">End Date</label>
                    <p class="input-group">
                        <input type="text" class="form-control input-md" uib-datepicker-popup="{{format}}"
                               ng-model="end_date" is-open="popup2.opened"
                               datepicker-options="dateOptions"
                               ng-required="true" close-text="Close"/>
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-info btn-md" ng-click="open2()">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </button>
                        </span>
                    </p>
                </div>
                <div class="col-md-2">
                    <label></label>
                    <div class="form-group">
                        <button type="submit" class="btn btn-info" style="width: 100%; font-weight: bold; background-color: #0b9194" ng-click="viewExpenses()">View</button>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="panel panel-success ">
                    <div class="panel-heading"><strong>Amount for the provided time range</strong></div>
                    <div class="panel-body">{{totalAmount}}</div>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>

<section ng-hide="showReport">
<div class="container">
<div class="row">

    <div class="col-md-12">
    <br><br>
    <div class="table-responsive">
        <table class="table table-striped table-condensed table-bordered">
            <thead align="center">
                <tr>
                    <th>#</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody >
                <tr ng-repeat="expense in allExpenses" style="margin-top: 10px">
                    <td>{{expense.id}}</td>
                    <td>{{expense.amount}}</td>
                    <td>{{expense.date}}</td>
                    <td>{{expense.description}}</td>
                </tr>
            </tbody>
        </table>
    </div>
    </div>
</div>
</div>
</section>